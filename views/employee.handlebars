<!--Blue Heading-->
<div class="row">
  <div class="col s12 blue mainBar">
    <div class="row mainInfo">
      <div class="col-6 topPadding">
        <img
          class="userPhoto responsive-img"
          src="public\images\twotone_account_circle_black_48dp.png"
          alt="user"
        />
        <h3 class="flow-text employeeName">Welcome {{user.name}}! </h3>
      </div>
      <!--Chart Graphic-->
        <div class="col-6 container">
          <div class="col s6">
            <canvas id="myChart">
            </canvas>
          </div>      
        </div>
    </div>
  </div>
</div>

<!--Employee Tasks-->
<div class="row">

  {{#each tasks as |task|}}
    <div class="col s12 m6 l3">
      <div class="card container">

        <h5>{{title}}</h5>
        <p>{{description}}</p>

      </div>
      <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
    </div>
  {{/each}}
</div>

<script src="./js/chart-simple.js"></script>