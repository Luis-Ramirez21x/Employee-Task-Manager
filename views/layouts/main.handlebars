    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>


<body>
  <nav>
    <div class="nav-wrapper navBar">
      <a href="#!" class="brand-logo"><i class="material-icons">cloud</i>Task Manager</a>
      <ul class="right hide-on-small-and-down">
        <li><a class="modal-trigger" href="#modal1"><i class="material-icons">phone</i></a></li>
        <li><a class="modal-trigger" href="#modal2"><i class="material-icons">contact_support</i></a></li>
        {{! if logged is not working }}
        {{#if logged_in}}
        <li><a class="modal-trigger" href="/"><i class="material-icons" id="logout">logout</i></a></li>
        {{else}}
        <li><a class="modal-trigger" href="#modal4"></a><a href="/">login</a></li>
        {{/if}}
        {{! ------------ }}
      </ul>
    </div>
  </nav>


    <div id="modal1" class="modal">
      <div class="modal-content">
        <div class="row">
          <form class="col s12">
            <div class="row">
              <div class="input-field col s6">
                <i class="material-icons prefix">account_circle</i>
                <input id="icon_prefix" type="text" class="validate" />
                <label for="icon_prefix">Name</label>
              </div>
              <div class="input-field col s6">
                <i class="material-icons prefix">phone</i>
                <input id="icon_telephone" type="tel" class="validate" />
                <label for="icon_telephone">Telephone</label>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="modal-footer">
        <a
          href="#!"
          class="modal-close waves-effect waves-green btn-flat"
        >Submit</a>
      </div>
    </div>

    <div id="modal2" class="modal">
      <div class="modal-content">
        <div class="row container">
          <form class="col s12">
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">mail</i>
                <input id="emailInput" type="email" class="validate" />
                <label for="emailInput">Email</label>
                <span
                  class="helper-text"
                  data-error="type in a valid email"
                  data-success="Valid email"
                ></span>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="row container">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s12">
              <i class="material-icons prefix">mode_edit</i>
              <textarea
                id="icon_prefix2"
                class="materialize-textarea"
              ></textarea>
              <label for="icon_prefix2">Please explain issues here...</label>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <a
          href="#!"
          class="modal-close waves-effect waves-green btn-flat"
        >Sumbit</a>
      </div>
    </div>

    <div class="borderBar"></div>

    {{{body}}}


  <div class="borderBar"></div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      var elems = document.querySelectorAll('.modal');
      var instances = M.Modal.init(elems);
    });
    document.addEventListener('DOMContentLoaded', function () {
      var elems = document.querySelectorAll('select');
      var instances = M.FormSelect.init(elems);
    });
  </script>


  </body>
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"
  ></script>

